<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="#2c2f33"
	tools:ignore="ExtraText">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:justificationMode="inter_word"
        android:text="I have a long-time interest in those hobbies to create a motivate enviroment that benefits  me to do a lot of discovering, create and problem-solving."
        android:textColor="#1e2d4c"
        android:textSize="14sp"
        android:textStyle="bold" />

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_marginTop="180dp"
		android:columnCount="2"
		android:rowCount="5">

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="0"
			android:layout_rowWeight="0"
			android:layout_column="0"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp"
			app:contentPaddingTop="6sp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<ImageView
					android:id="@+id/image"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_contentcreation"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image"
					android:layout_marginTop="5dp"
					android:text="Content Creation"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="0"
			android:layout_rowWeight="0"
			android:layout_column="1"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image1"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_music"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Music"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="1"
			android:layout_rowWeight="0"
			android:layout_column="0"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image2"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_gaming"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Gaming"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="1"
			android:layout_rowWeight="0"
			android:layout_column="1"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image3"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_laptop"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Video Editing"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="2"
			android:layout_rowWeight="0"
			android:layout_column="0"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image4"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_yt"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Movies"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="2"
			android:layout_rowWeight="0"
			android:layout_column="1"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image5"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_flowers"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Flowering plant"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="3"
			android:layout_rowWeight="0"
			android:layout_column="0"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image6"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_pho_filter"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Photography"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>


		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_row="3"
			android:layout_rowWeight="0"
			android:layout_column="1"
			android:layout_columnWeight="1"
			android:layout_gravity="fill"
			android:layout_margin="8dp"
			app:cardBackgroundColor="@color/colorPrimary"
			app:cardCornerRadius="20dp"
			app:cardElevation="0dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="12dp">

				<ImageView
					android:id="@+id/image8"
					android:layout_width="80dp"
					android:layout_height="60dp"
					android:src="@drawable/ic_baking"
					app:tint="@android:color/white" />

				<TextView
					android:id="@+id/title8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/image1"
					android:layout_marginTop="5dp"
					android:text="Baking"
					android:textColor="#1e2d4c"
					android:textSize="14sp"
					android:textStyle="bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

	</GridLayout>
</RelativeLayout>